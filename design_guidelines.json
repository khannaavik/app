        "line_height": "1.6"
      },
      "accents": {
        "font_family": "Playfair Display, serif",
        "usage": "Testimonials, Quotes, 'Master Investor' title"
      }
    },
    "spacing": {
      "container_padding": "p-6 md:p-12 lg:p-24",
      "section_gap": "gap-16 md:gap-32",
      "element_gap": "gap-4 md:gap-8"
    },
    "radius": {
      "default": "rounded-none",
      "buttons": "rounded-full",
      "cards": "rounded-sm"
    },
    "shadows": {
      "card": "shadow-[0_4px_20px_rgba(0,0,0,0.05)]",
      "hover": "shadow-[0_20px_40px_rgba(0,0,0,0.1)]"
