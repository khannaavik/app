{
  "brand_identity": {
    "name": "SSB Group",
    "archetype": "The Architect & The Visionary",
    "tone": "Bold, Architectural, Trustworthy, Elite",
    "visual_style": "Swiss Luxury",
    "core_values": ["Precision", "Legacy", "Wealth Creation"]
  },
  "design_system": {
    "colors": {
      "primary": "#0A0A0A",
      "secondary": "#F3F4F6",
      "accent": "#C5A059",
      "background": "#FFFFFF",
      "text_primary": "#0A0A0A",
      "text_secondary": "#4B5563",
      "border": "#E5E7EB",
      "success": "#10B981",
      "error": "#EF4444"
